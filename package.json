{
  "name": "resumed",
  "version": "0.0.0-development",
  "description": "Lightweight JSON Resume builder, no-frills alternative to resume-cli",
  "keywords": [
    "resume",
    "json",
    "jsonresume",
    "cli",
    "resume-cli",
    "curriculum",
    "curriculum-vitae",
    "cv",
    "employment"
  ],
  "homepage": "https://github.com/rbardini/resumed",
  "bugs": {
    "url": "https://github.com/rbardini/resumed/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rbardini/resumed.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rafael Bardini",
    "email": "rafael@rbardini.com",
    "url": "https://rbardini.com/"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "resumed": "bin/resumed.js"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdx build --format cjs --target node",
    "lint": "tsdx lint",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepare": "npm run build",
    "prepublishOnly": "pinst --disable",
    "start": "tsdx watch --format cjs --target node",
    "test": "NO_COLOR= tsdx test"
  },
  "dependencies": {
    "colorette": "^1.2.0",
    "escalade": "^3.1.0",
    "globby": "^11.0.0",
    "lodash.uniqby": "^4.7.0",
    "resume-schema": "^1.0.0",
    "sade": "^1.7.0"
  },
  "devDependencies": {
    "@types/lodash.uniqby": "4.7.6",
    "@types/sade": "1.7.2",
    "husky": "5.1.1",
    "jsonresume-theme-even": "0.6.1",
    "lint-staged": "10.5.4",
    "pinst": "2.1.6",
    "prettier-plugin-packagejson": "2.2.10",
    "tsdx": "0.14.1",
    "tslib": "2.1.0",
    "typescript": "4.2.2"
  },
  "engines": {
    "node": ">=12"
  }
}
